{% extends 'base.html.twig' %}


{% block title %}
    {{ sirop.title }}
{% endblock %}


{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <div class="owl-carousel owl-theme">
                    {% for image in sirop.images %}
                        <a data-fancybox="sirop-main" href="{{ vich_uploader_asset(image) }}">
                            <img src="{{ vich_uploader_asset(image) }}" alt="">
                        </a>
                    {% endfor %}
                </div>
            </div>
            <div class="col-md-6">
                <h3>{{ sirop.title }}</h3>
                <ul class="list-group">
                    {% for ingredient in sirop.ingredients %}
                        <li class="list-group-item">{{ ingredient }}</li>
                    {% endfor %}
                </ul>
                {{ sirop.description|raw }}
            </div>
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('product-show') }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('product-show') }}
{% endblock %}
